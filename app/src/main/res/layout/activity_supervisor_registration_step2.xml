<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.escapes.utc.options.users.supervisorRegistrationStep2"
    style="@style/light"
    android:padding="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Save"
        android:id="@+id/bt_supervisor_save"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/img_supervisor_image"
        android:layout_alignEnd="@+id/img_supervisor_image" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:id="@+id/img_supervisor_image"

        android:background="#8999"
        android:src="@drawable/no_photo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop"
        android:minHeight="200dp"


        android:layout_centerHorizontal="true"
        android:layout_above="@+id/bt_supervisor_save"
        android:layout_below="@+id/bt_student_getimage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get Image"
        android:id="@+id/bt_student_getimage"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/bt_student_home"
        android:layout_alignBottom="@+id/bt_supervisor_save"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
